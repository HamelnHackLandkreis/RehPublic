{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Run with Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.main:app",
                "--reload",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/backend",
            "python": "${command:python.interpreterPath}"
        },
    ]
}